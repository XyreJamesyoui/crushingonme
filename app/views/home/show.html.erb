<% if current_user %>
  <% if current_user.page_active != true %>
    <center style="padding: 2em"><a class="w3-btn w3-pink" href="/activate_page">Activate your page!</a></center>
    <% else %>
        <h3>Pass your page link around! - https://vast-beyond-16284.herokuapp.com/users/<%=current_user.id%></h3>
        <h3>Your secret admirers said...</h3>
        <% current_user.crushes.each do |crush| %>
            <div class="w3-container w3-leftbar w3-pink">
                <strong><%= crush.message%></strong><br>
                <%= crush.updated_at.to_formatted_s(:short)  %>
            </div>
        <% end%>
    <% end %>
<% end %>
